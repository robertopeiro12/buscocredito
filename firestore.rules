rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permitir que usuarios autenticados accedan a su propia información en "cuentas"
    match /cuentas/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir que usuarios autenticados accedan a sus propias solicitudes
    match /solicitudes/{solicitudId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Permitir que usuarios autenticados lean propuestas
    match /propuestas/{propuestaId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Permitir que usuarios autenticados accedan a las notificaciones
    match /notifications/{notificationId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Por defecto, denegar acceso a todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}